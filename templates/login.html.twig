{% extends 'base.html.twig' %}

{% block body %}

    <div class="card mx-auto col-md-5 pr-0 pl-0 mt-4">
        <div class="card-header text-white bg-warning mb-3">
           Přihlášení uživatele
        </div>
        <div class="card-body">

            <form method="post" action="">
                <input type="hidden" name="csrftoken" value="{{ csrftoken }}">
                <div class="form-group">
                    <label class="form-control-label" for="formGroupExampleInput">Email</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="formGroupExampleInput2">Heslo</label>
                    <input type="text" class="form-control" name="password" required>
                </div>

                <p class="card-text text-danger">{{ message }}</p>
                <input type="submit" class="btn btn-warning" value="Přihlásit" />
            </form>

        </div>
    </div>


{% endblock %}